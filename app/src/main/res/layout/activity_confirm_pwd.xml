<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tab_text_gray3"
    android:orientation="vertical">

    <include layout="@layout/common_title_text"/>
    <LinearLayout
        android:id="@+id/aap_linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">
            <TextView
                android:id="@+id/aap_tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="15dp"
                android:text="支付密码"
                android:layout_centerVertical="true"
                android:layout_marginRight="45dp"
                android:textSize="15sp"
                android:textColor="@color/arp_text1"/>
            <EditText
                android:id="@+id/acp_pwd"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:hint="请输入支付密码"
                android:background="@null"
                android:layout_toRightOf="@id/aap_tv1"
                android:layout_centerVertical="true"
                android:textSize="15sp"
                android:inputType="numberPassword"
                android:textColorHint="@color/hint_text_gray"
                android:textColor="@color/arp_text1"/>
        </RelativeLayout>
        <Button
            android:id="@+id/confirm_pwd_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="确定"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/bg_color"
            android:textSize="16sp"
            android:background="@drawable/bg_login_style"
            />
    </LinearLayout>
</LinearLayout>
