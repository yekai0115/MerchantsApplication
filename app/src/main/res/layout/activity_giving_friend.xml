<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f5f5f5">
    <include layout="@layout/common_title_text"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:background="#f5f5f5">
        <com.ddz.mearchant.view.HandyTextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="请选择赠送类型"
            android:textSize="14sp"
            android:textColor="#626262"
            android:gravity="bottom"
            android:layout_marginBottom="7.5dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/giving_type_linear"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/white"
        android:paddingLeft="15dp">
        <com.ddz.mearchant.view.HandyTextView
            android:id="@+id/giving_type_select"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:hint="请选择赠送类型"
            android:textColorHint="@color/hint_text_gray"
            android:textSize="15sp"
            android:textColor="#000607"
            android:gravity="center_vertical"/>
        <com.ddz.mearchant.view.HandyTextView
            android:id="@+id/giving_type_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColorHint="@color/hint_text_gray"
            android:textSize="15sp"
            android:textColor="#000607"
            android:gravity="center_vertical"/>
        <com.ddz.mearchant.view.HandyTextView
            android:id="@+id/giving_integral_num"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="20sp"
            android:textColor="#ff5b29"
            android:paddingLeft="10dp"
            android:layout_weight="1"
            android:gravity="center_vertical"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="15dp"
            android:background="@drawable/my_select1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_marginTop="15dp"
        android:paddingLeft="15dp">
        <com.ddz.mearchant.view.HandyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="赠送积分"
            android:paddingTop="20dp"
            android:textSize="15sp"
            android:textColor="#000607"
            android:gravity="center_vertical"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="17.5dp"
            android:paddingBottom="24dp"
            android:orientation="horizontal">
            <com.ddz.mearchant.view.HandyTextView
                android:id="@+id/acb_tv7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="￥"
                android:gravity="center"
                android:textSize="33sp"
                android:textColor="@color/order_text_color"/>

            <EditText
                android:id="@+id/giving_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:background="@null"
                android:hint="0.00"
                android:inputType="number|numberDecimal"
                android:maxLength="11"
                android:textColor="@color/arp_text1"
                android:textColorHint="@color/hint_text_gray"
                android:textSize="44sp" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/white"
        android:paddingLeft="15dp"
        android:gravity="center"
        android:layout_marginTop="15dp">
        <com.ddz.mearchant.view.HandyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号"
            android:textSize="15sp"
            android:textColor="#000607"
            android:gravity="center_vertical"/>
        <EditText
            android:id="@+id/giving_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:background="@null"
            android:hint="请输入好友手机号"
            android:inputType="number"
            android:maxLength="11"
            android:textColor="@color/arp_text1"
            android:textColorHint="@color/hint_text_gray"
            android:textSize="15sp" />
    </LinearLayout>

    <Button
        android:id="@+id/giving_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="确认赠送"
        android:layout_marginTop="54dp"
        android:layout_marginLeft="22.5dp"
        android:layout_marginRight="22.5dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/bg_color"
        android:textSize="16sp"
        android:background="@drawable/bg_login_style"
        />
</LinearLayout>
