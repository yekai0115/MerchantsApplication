<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/tab_text_gray3"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/tab_line_color"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/my_shop_linear"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <LinearLayout
                        android:id="@+id/return_back"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/return_back"
                            android:gravity="center_vertical" />
                    </LinearLayout>
                    <com.ddz.mearchant.view.HandyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:text="店铺信息"
                        android:textColor="@color/bg_color"
                        android:textSize="20sp" />

                    <com.ddz.mearchant.view.HandyTextView
                        android:id="@+id/save_shop_info"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp"
                        android:gravity="center"
                        android:text="保存"
                        android:textColor="@color/bg_color"
                        android:textSize="20sp" />
                </RelativeLayout>
            </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="72dp"
                        android:background="@color/bg_color"
                        android:orientation="horizontal"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp">

                        <com.ddz.mearchant.view.HandyTextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="头像"
                            android:textColor="@color/order_text_color"
                            android:textSize="16sp" />
                        <com.ddz.mearchant.view.CircleImageView
                            xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/shop_logo"
                            android:layout_width="52dp"
                            android:layout_height="52dp"
                            android:layout_gravity="center_vertical"
                            app:border_color="@color/bg_color"
                            android:layout_margin="10dp"
                            app:border_width="1dp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/my_select1" />
                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/shop_name_linear"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginTop="15dp"
                        android:background="@color/bg_color"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp">

                        <com.ddz.mearchant.view.HandyTextView
                            android:id="@+id/name"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_alignParentLeft="true"
                            android:gravity="center_vertical"
                            android:text="店铺名"
                            android:textColor="@color/order_text_color"
                            android:textSize="16sp" />

                        <com.ddz.mearchant.view.HandyTextView
                            android:id="@+id/shop_name"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginRight="9dp"
                            android:layout_marginLeft="50dp"
                            android:gravity="center_vertical|right"
                            android:maxLines="2"
                            android:ellipsize="end"
                            android:textColor="@color/tab_text_gray4"
                            android:textSize="14sp"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/my_select1" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginTop="0.5dp"
                        android:background="@color/bg_color"
                        android:orientation="horizontal"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp">

                        <com.ddz.mearchant.view.HandyTextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="主营业务"
                            android:textColor="@color/order_text_color"
                            android:textSize="16sp" />

                        <com.ddz.mearchant.view.HandyTextView
                            android:id="@+id/shop_cat_name"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginRight="9dp"
                            android:gravity="center_vertical"
                            android:text="百货"
                            android:textColor="@color/tab_text_gray4"
                            android:textSize="14sp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/my_select1"
                            android:visibility="gone"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginTop="0.5dp"
                        android:background="@color/bg_color"
                        android:orientation="horizontal"
                        android:paddingLeft="15dp"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:paddingRight="15dp">

                        <com.ddz.mearchant.view.HandyTextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="营业时间"
                            android:textColor="@color/order_text_color"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/shop_time"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginRight="9dp"
                            android:gravity="center_vertical|right"
                            android:hint="请输入营业时间"
                            android:background="@null"
                            android:textColor="@color/tab_text_gray4"
                            android:textSize="14sp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/my_select1"
                            android:visibility="gone"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        android:layout_marginTop="0.5dp"
                        android:background="@color/bg_color"
                        android:orientation="horizontal"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <com.ddz.mearchant.view.HandyTextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_alignParentLeft="true"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:text="地址"
                                android:textColor="@color/order_text_color"
                                android:textSize="16sp" />

                            <com.ddz.mearchant.view.HandyTextView
                                android:id="@+id/shop_address"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_alignParentRight="true"
                                android:layout_marginLeft="100dp"
                                android:gravity="center_vertical"
                                android:text="深圳市南山区创意园一号啊哈哈好啊哈"
                                android:textColor="@color/tab_text_gray4"
                                android:textSize="14sp" />
                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginTop="0.5dp"
                        android:background="@color/bg_color"
                        android:orientation="horizontal"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp">

                        <com.ddz.mearchant.view.HandyTextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="联系电话"
                            android:textColor="@color/order_text_color"
                            android:textSize="16sp" />

                        <com.ddz.mearchant.view.HandyTextView
                            android:id="@+id/shop_mobile"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="18779561251"
                            android:textColor="@color/tab_text_gray4"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:background="@color/bg_color"
                        android:orientation="vertical"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp">

                        <com.ddz.mearchant.view.HandyTextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:paddingBottom="14dp"
                            android:paddingTop="16dp"
                            android:text="门头照"
                            android:textColor="@color/order_text_color"
                            android:textSize="16sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/bg_color"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/up_image_linear"
                                android:layout_width="150dp"
                                android:layout_height="100dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginBottom="17dp"
                                android:background="@drawable/bg_default_add_image"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/up_head_image"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:scaleType="fitXY"
                                    android:background="@drawable/my_photo"
                                     />
                                <ImageView
                                    android:id="@+id/up_head_images"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:scaleType="fitXY"
                                    android:visibility="gone"
                                    />
                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:background="@color/bg_color"
                        android:orientation="vertical"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp">

                        <com.ddz.mearchant.view.HandyTextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:paddingBottom="14dp"
                            android:paddingTop="16dp"
                            android:text="店内照"
                            android:textColor="@color/order_text_color"
                            android:textSize="16sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/bg_color"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/shop_inside_linear1"
                                android:layout_width="150dp"
                                android:layout_height="100dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginRight="9dp"
                                android:background="@drawable/bg_default_add_image"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/shop_inside_image1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:background="@drawable/my_photo"
                                    android:gravity="center" />

                                <ImageView
                                    android:id="@+id/shop_inside_images1"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:scaleType="fitXY"
                                    android:visibility="gone"
                                    />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/shop_inside_linear2"
                                android:layout_width="150dp"
                                android:layout_height="100dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="9dp"
                                android:background="@drawable/bg_default_add_image"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/shop_inside_image2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:background="@drawable/my_photo"
                                    android:gravity="center" />

                                <ImageView
                                    android:id="@+id/shop_inside_images2"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:scaleType="fitXY"
                                    android:visibility="gone"
                                    />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/bg_color"
                            android:gravity="center"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="17dp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/shop_inside_linear3"
                                android:layout_width="150dp"
                                android:layout_height="100dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginRight="9dp"
                                android:background="@drawable/bg_default_add_image"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/shop_inside_image3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:layout_gravity="center"
                                    android:background="@drawable/my_photo" />

                                <ImageView
                                    android:id="@+id/shop_inside_images3"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:scaleType="fitXY"
                                    android:visibility="gone"
                                    />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="150dp"
                                android:layout_height="100dp"
                                android:orientation="horizontal"
                                android:layout_gravity="center_vertical"
                                android:gravity="center"
                                android:visibility="invisible"
                                android:layout_marginLeft="9dp"
                                android:background="@drawable/bg_default_add_image">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:layout_gravity="center"
                                    android:background="@drawable/my_photo" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:background="@color/bg_color"
                        android:orientation="vertical"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp">

                        <com.ddz.mearchant.view.HandyTextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:paddingBottom="14dp"
                            android:paddingTop="16dp"
                            android:text="资质证书"
                            android:textColor="@color/order_text_color"
                            android:textSize="16sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/bg_color"
                            android:layout_marginBottom="17dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/bg_color"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:id="@+id/book_inside_linear"
                                    android:layout_width="150dp"
                                    android:layout_height="100dp"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginRight="9dp"
                                    android:background="@drawable/bg_default_add_image"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/book_inside_image"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:background="@drawable/my_photo"
                                        android:gravity="center" />
                                    <ImageView
                                        android:id="@+id/book_inside_images"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center"
                                        android:scaleType="fitXY"
                                        android:visibility="gone"
                                        />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="150dp"
                                    android:layout_height="100dp"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="9dp"
                                    android:visibility="invisible"
                                    android:background="@drawable/bg_default_add_image"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:background="@drawable/my_photo"
                                        android:gravity="center" />
                                </LinearLayout>
                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </ScrollView>
    </LinearLayout>
    </LinearLayout>