<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tab_text_gray3"
    android:orientation="vertical">

    <include layout="@layout/common_title_text"/>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:id="@+id/arp_linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">
            <com.ddz.mearchant.view.HandyTextView
                android:id="@+id/arp_tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="15dp"
                android:text="手机号"
                android:layout_centerVertical="true"
                android:layout_marginRight="45dp"
                android:textSize="15sp"
                android:textColor="@color/order_text_color"/>
            <EditText
                android:id="@+id/arp_phone"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:hint="请输入手机号"
                android:background="@null"
                android:layout_toRightOf="@id/arp_tv1"
                android:layout_centerVertical="true"
                android:textSize="15sp"
                android:textColor="@color/order_text_color"
                android:inputType="number"
                android:textColorHint="@color/hint_text_gray"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_line_height"
                android:layout_below="@id/arp_phone"
                android:layout_marginTop="0dp"
                android:background="@color/tab_text_gray3" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">
            <com.ddz.mearchant.view.HandyTextView
                android:id="@+id/arp_tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="15dp"
                android:text="验证码"
                android:layout_centerVertical="true"
                android:layout_marginRight="45dp"
                android:textSize="15sp"
                android:textColor="@color/order_text_color"/>
            <EditText
                android:id="@+id/arp_vercode"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:hint="请输入验证码"
                android:background="@null"
                android:layout_toRightOf="@id/arp_tv2"
                android:layout_centerVertical="true"
                android:textSize="15sp"
                android:textColor="@color/order_text_color"
                android:inputType="number"
                android:textColorHint="@color/hint_text_gray"/>
            <com.ddz.mearchant.view.HandyTextView
                android:id="@+id/arp_getcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:text="获取验证码"
                android:textColor="@color/tab_line_color"/>
        </RelativeLayout>
        <Button
            android:id="@+id/confim_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="确认"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="22.5dp"
            android:layout_marginRight="22.5dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/bg_color"
            android:textSize="16sp"
            android:background="@drawable/bg_login_style"/>
    </LinearLayout>

    <!-- this is part 3 -->
    <LinearLayout
        android:id="@+id/arp_linear2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:visibility="gone"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">
            <com.ddz.mearchant.view.HandyTextView
                android:id="@+id/arp_tv3"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="15dp"
                android:text="新密码"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:textSize="15sp"
                android:textColor="@color/order_text_color"/>
            <EditText
                android:id="@+id/arp_pwd1"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:hint="请输入新密码"
                android:background="@null"
                android:layout_toRightOf="@id/arp_tv3"
                android:layout_centerVertical="true"
                android:textSize="15sp"
                android:inputType="textPassword"
                android:textColor="@color/order_text_color"
                android:textColorHint="@color/hint_text_gray"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_line_height"
                android:layout_below="@id/arp_pwd1"
                android:layout_marginTop="0dp"
                android:background="@color/tab_line_gray" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">
            <com.ddz.mearchant.view.HandyTextView
                android:id="@+id/arp_tv4"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="15dp"
                android:text="确认新密码"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:textSize="15sp"
                android:textColor="@color/order_text_color"/>
            <EditText
                android:id="@+id/arp_pwd2"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:hint="请确认新密码"
                android:background="@null"
                android:layout_toRightOf="@id/arp_tv4"
                android:layout_centerVertical="true"
                android:textSize="15sp"
                android:inputType="textPassword"
                android:textColor="@color/order_text_color"
                android:textColorHint="@color/hint_text_gray"/>
        </RelativeLayout>
        <Button
            android:id="@+id/confim_button2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="确认"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="22.5dp"
            android:layout_marginRight="22.5dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/bg_color"
            android:textSize="16sp"
            android:background="@drawable/bg_login_style"/>
    </LinearLayout>
</LinearLayout>
