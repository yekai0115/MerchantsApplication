<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/title_yealloy_bg"
    android:orientation="vertical">

    <include layout="@layout/common_title_collection" />

    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:checkedButton="@+id/first_radio"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/first_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@drawable/asp_radio_textcolor_sel"
            android:text="20%"
            android:paddingTop="8dp"
            android:visibility="gone"
            android:layout_marginRight="10dp"
            android:paddingBottom="8dp"
            android:gravity="center"
            android:button="@null"
            android:background="@drawable/asp_radio_sel"
            />
        <RadioButton
            android:id="@+id/two_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@drawable/asp_radio_textcolor_sel"
            android:text="10%"
            android:visibility="gone"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:gravity="center"
            android:button="@null"
            android:background="@drawable/asp_radio_sel"/>
        <RadioButton
            android:id="@+id/three_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@drawable/asp_radio_textcolor_sel"
            android:text="5%"
            android:layout_marginLeft="10dp"
            android:visibility="gone"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:gravity="center"
            android:button="@null"
            android:background="@drawable/asp_radio_sel"/>
    </RadioGroup>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="372dp"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_cirle_style">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.ddz.mearchant.view.HandyTextView
                android:id="@+id/text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:gravity="center_horizontal"
                android:text="扫码向我付款"
                android:textColor="@color/order_text_color"
                android:textSize="18sp" />

            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@+id/text1"
                android:layout_marginTop="23dp"
                android:background="#f3f3f3" />

            <ImageView
                android:id="@+id/qr_code_image"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_below="@+id/view1"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="42dp"
                android:layout_marginTop="22.5dp" />

            <com.ddz.mearchant.view.HandyTextView
                android:id="@+id/text2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="32dp"
                android:gravity="center_horizontal"
                android:text="长按保存二维码"
                android:textColor="#a19e9e"
                android:textSize="15sp" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
