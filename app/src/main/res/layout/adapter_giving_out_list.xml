<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/order_linear"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_color"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.ddz.mearchant.view.HandyTextView
                    android:id="@+id/giving_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18.5dp"
                    android:gravity="center_vertical"
                    android:text="收款账户:"
                    android:textColor="@color/order_text_color"
                    android:textSize="15dp"/>
                <com.ddz.mearchant.view.HandyTextView
                    android:id="@+id/giving_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18.5dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:layout_toRightOf="@+id/giving_name"
                    android:textColor="@color/order_text_color"
                    android:textSize="16sp"/>
                <com.ddz.mearchant.view.HandyTextView
                    android:id="@+id/giving_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="18.5dp"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/order_text_color"
                    android:textSize="21sp"
                    android:textStyle="bold" />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.ddz.mearchant.view.HandyTextView
                    android:id="@+id/giving_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="19.5dp"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:textColor="#878787"
                    android:textSize="14sp" />
                <com.ddz.mearchant.view.HandyTextView
                    android:id="@+id/giving_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="19.5dp"
                    android:gravity="center_vertical"
                    android:textColor="#848484"
                    android:textSize="14sp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>