<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/order_linear"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_color"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="13.5dp"
            android:background="@drawable/my_notice" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.ddz.mearchant.view.HandyTextView
                    android:id="@+id/palt_mes_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:gravity="center_vertical"
                    android:text="通知"
                    android:textColor="@color/order_text_color"
                    android:textSize="15dp" />
                <com.ddz.mearchant.view.HandyTextView
                    android:id="@+id/palt_mes_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_alignParentRight="true"
                    android:text="通知"
                    android:textColor="#848484"
                    android:textSize="11sp"
                    android:textStyle="bold" />
            </RelativeLayout>
            <com.ddz.mearchant.view.HandyTextView
                android:id="@+id/palt_mes_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="13dp"
                android:layout_marginBottom="15dp"
                android:gravity="center_vertical"
                android:text="通知"
                android:textColor="#848484"
                android:textSize="13dp" />
        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="10dp"
        android:background="@color/ad_table_col_divider"
        />
</LinearLayout>