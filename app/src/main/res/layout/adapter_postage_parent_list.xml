<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/order_linear"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e5e5e5"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42.5dp"
        android:background="@color/bg_color"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">
        <com.ddz.mearchant.view.HandyTextView
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="16dp"
            android:textColor="#272727"
            android:gravity="center_vertical"
            android:text="模板名:"
            />
        <com.ddz.mearchant.view.HandyTextView
            android:id="@+id/postage_name"
            android:layout_marginLeft="9dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="16dp"
            android:layout_weight="1"
            android:textColor="#272727"
            android:gravity="center_vertical"
            android:ellipsize="end"
            android:text="全场包邮全场包邮"
            />
        <LinearLayout
            android:id="@+id/postage_delete_linear"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/postage_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="4dp"
                android:background="@drawable/my_delete"/>
            <com.ddz.mearchant.view.HandyTextView
                android:layout_marginRight="15dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="16dp"
                android:textColor="#272727"
                android:gravity="center_vertical"
                android:text="删除"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
