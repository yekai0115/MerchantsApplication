<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_round_rect_bg"
    android:orientation="vertical">
    <TextView
        android:id="@+id/dialog_confirm_message"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="16sp"
        android:text="TestMessage"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="#000607"/>
    <View
        android:layout_width="300dp"
        android:layout_height="0.5dp"
        android:background="@color/dialog_personal_divider"/>
    <LinearLayout
        android:id="@+id/text_introduce_linear"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/dialog_confirm_cancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="文字介绍"
            android:textSize="15sp"
            android:gravity="center"
            android:layout_marginLeft="15dp"
            android:textColor="@color/order_text_color"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="15dp"
            android:background="@drawable/my_select1"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/dialog_personal_divider"/>
    <LinearLayout
        android:id="@+id/image_introduce_linear"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/dialog_confirm_ok"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="图片介绍"
            android:layout_marginLeft="15dp"
            android:textSize="15sp"
            android:gravity="center"
            android:textColor="@color/order_text_color"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="15dp"
            android:background="@drawable/my_select1"/>
    </LinearLayout>
</LinearLayout>
