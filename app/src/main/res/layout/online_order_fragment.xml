<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/white"
        android:orientation="vertical">
        <com.ddz.mearchant.view.PullToRefreshLayout
            android:id="@+id/product_refresh_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"
            >
        <include layout="@layout/refresh_head" />
            <com.ddz.mearchant.view.PullableScrollView
                android:id="@+id/pull_scrol_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/rlayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="68dp"
                        android:background="@color/white"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <com.ddz.mearchant.view.HandyTextView
                                android:id="@+id/cumulative_orders_num"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="17sp"
                                android:textColor="@android:color/black"/>
                            <com.ddz.mearchant.view.HandyTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="累计订单"
                                android:textSize="12sp"
                                android:layout_marginTop="6dp"
                                android:textColor="@color/tab_text_gray2"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <com.ddz.mearchant.view.HandyTextView
                                android:id="@+id/seven_days_orders_num"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="17sp"
                                android:textColor="@android:color/black"/>
                            <com.ddz.mearchant.view.HandyTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:text="近七天"
                                android:textSize="12sp"
                                android:textColor="@color/tab_text_gray2"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <com.ddz.mearchant.view.HandyTextView
                                android:id="@+id/send_orders_num"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="17sp"
                                android:textColor="@android:color/black"/>
                            <com.ddz.mearchant.view.HandyTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="待发货"
                                android:textSize="12sp"
                                android:layout_marginTop="6dp"
                                android:textColor="@color/tab_text_gray2"/>
                        </LinearLayout>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="15dp"
                        android:background="@color/tab_text_diveder">
                    </View>
                </LinearLayout>

                    <LinearLayout
                        android:id="@+id/search02"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >
                        <LinearLayout
                            android:id="@+id/zhuangtai_view"
                            android:layout_width="match_parent"
                            android:layout_height="75dp"
                            android:layout_gravity="center_horizontal"
                            android:background="@color/white"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/all_tap_linear"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/all_tap_image"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/home_all" />

                                <com.ddz.mearchant.view.HandyTextView
                                    android:id="@+id/all_tap_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="6dp"
                                    android:gravity="center"
                                    android:textSize="12sp"
                                    android:textColor="@color/tab_text_gray"
                                    android:text="全部"
                                     />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/pay_tap_linear"
                                android:layout_weight="1"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical">
                                <ImageView
                                    android:id="@+id/pay_tap_image"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/home_earnings"/>
                                <com.ddz.mearchant.view.HandyTextView
                                    android:id="@+id/pay_tap_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="待付款"
                                    android:layout_marginTop="6dp"
                                    android:textSize="12sp"
                                    android:textColor="@color/tab_text_gray"
                                    android:gravity="center"/>
                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/send_tap_linear"
                                android:layout_weight="1"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical">
                                <ImageView
                                    android:id="@+id/send_tap_image"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/home_wait_deliver_goods"/>
                                <com.ddz.mearchant.view.HandyTextView
                                    android:id="@+id/send_tap_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="待发货"
                                    android:layout_marginTop="6dp"
                                    android:textSize="12sp"
                                    android:textColor="@color/tab_text_gray"
                                    android:gravity="center"/>
                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/receive_tap_linear"
                                android:layout_weight="1"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical">
                                <ImageView
                                    android:id="@+id/receive_tap_image"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/home_wait_receiving"/>
                                <com.ddz.mearchant.view.HandyTextView
                                    android:id="@+id/receive_tap_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="待收货"
                                    android:layout_marginTop="6dp"
                                    android:textSize="12sp"
                                    android:textColor="@color/tab_text_gray"
                                    android:gravity="center"/>
                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/complete_tap_linear"
                                android:layout_weight="1"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical">
                                <ImageView
                                    android:id="@+id/complete_tap_image"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/home_off_stocks"/>
                                <com.ddz.mearchant.view.HandyTextView
                                    android:id="@+id/complete_tap_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="已完成"
                                    android:layout_marginTop="6dp"
                                    android:textSize="12sp"
                                    android:textColor="@color/tab_text_gray"
                                    android:gravity="center"/>
                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="6dp"
                        android:background="@color/tab_text_diveder">
                    </View>
                    <com.ddz.mearchant.view.PullableExpandableListView
                        android:id="@+id/order_list"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/tab_text_diveder"
                        android:divider="@null"
                        android:scrollbars="none"

                        />
                    <LinearLayout
                        android:id="@+id/no_list_show"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:visibility="gone">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="115dp"
                            android:src="@drawable/blank"
                            android:layout_gravity="center"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:textSize="15sp"
                            android:textColor="#8f8f8f"
                            android:gravity="center"
                            android:text="暂无相关订单"/>
                    </LinearLayout>
                </LinearLayout>
            </com.ddz.mearchant.view.PullableScrollView>
            <include layout="@layout/load_more" />
        </com.ddz.mearchant.view.PullToRefreshLayout>
        <LinearLayout
            android:id="@+id/search01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
        </LinearLayout>
</RelativeLayout>