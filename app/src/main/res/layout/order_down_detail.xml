<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_blank_color"
    android:orientation="vertical">
    <include layout="@layout/common_title_text"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="15dp"
        android:background="@color/white">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="20dp">
            <com.ddz.mearchant.view.HandyTextView
                android:id="@+id/xiaofei_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="消费金额"
                android:textSize="15sp"
                android:textColor="@color/order_text_color"/>
            <com.ddz.mearchant.view.HandyTextView
                android:id="@+id/consumption_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/xiaofei_amount"
                android:gravity="right"
                android:layout_alignParentRight="true"
                android:textSize="15sp"
                android:text="dasdad"
                android:textColor="@color/order_text_color"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="20dp">
            <com.ddz.mearchant.view.HandyTextView
                android:id="@+id/jili_fen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="激励分"
                android:textSize="15sp"
                android:textColor="@color/order_text_color"/>
            <com.ddz.mearchant.view.HandyTextView
                android:id="@+id/incentive_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:gravity="right"
                android:layout_toRightOf="@+id/jili_fen"
                android:layout_alignParentRight="true"
                android:textSize="15sp"
                android:textColor="@color/order_text_color"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="20dp">
            <com.ddz.mearchant.view.HandyTextView
                android:id="@+id/shou_kuan_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收款账户"
                android:textSize="15sp"
                android:textColor="@color/order_text_color"/>
            <com.ddz.mearchant.view.HandyTextView
                android:id="@+id/payment_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:gravity="right"
                android:layout_toRightOf="@+id/shou_kuan_name"
                android:layout_alignParentRight="true"
                android:textSize="15sp"
                android:textColor="@color/order_text_color"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="20dp">
            <com.ddz.mearchant.view.HandyTextView
                android:id="@+id/jiao_yi_shijian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="交易时间"
                android:textSize="15sp"
                android:textColor="@color/tab_text_gray4"/>
            <com.ddz.mearchant.view.HandyTextView
                android:id="@+id/trading_hours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:gravity="right"
                android:layout_toRightOf="@+id/jiao_yi_shijian"
                android:layout_alignParentRight="true"
                android:textSize="15sp"
                android:textColor="@color/tab_text_gray4"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="20dp">
            <com.ddz.mearchant.view.HandyTextView
                android:id="@+id/dingdan_hao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单号"
                android:textSize="15sp"
                android:textColor="@color/tab_text_gray4"/>
            <com.ddz.mearchant.view.HandyTextView
                android:id="@+id/order_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:gravity="right"
                android:layout_toRightOf="@+id/dingdan_hao"
                android:layout_alignParentRight="true"
                android:textSize="15sp"
                android:textColor="@color/tab_text_gray4"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="20dp">
            <com.ddz.mearchant.view.HandyTextView
                android:id="@+id/zhifu_huizhi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="支付回执"
                android:textSize="15sp"
                android:textColor="@color/tab_text_gray4"/>
            <com.ddz.mearchant.view.HandyTextView
                android:id="@+id/pay_return"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:gravity="right"
                android:layout_toRightOf="@+id/zhifu_huizhi"
                android:layout_alignParentRight="true"
                android:textSize="15sp"
                android:textColor="@color/tab_text_gray4"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="20dp">
            <com.ddz.mearchant.view.HandyTextView
                android:id="@+id/zhifu_method"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="支付方法"
                android:textSize="15sp"
                android:textColor="@color/tab_text_gray4"/>
            <com.ddz.mearchant.view.HandyTextView
                android:id="@+id/pay_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:gravity="right"
                android:layout_toRightOf="@+id/zhifu_method"
                android:layout_alignParentRight="true"
                android:textSize="15sp"
                android:textColor="@color/tab_text_gray4"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingBottom="30dp"
            android:paddingTop="20dp">

            <com.ddz.mearchant.view.HandyTextView
                android:id="@+id/zhichu_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="支出账户"
                android:textColor="@color/tab_text_gray4"
                android:textSize="15sp" />

            <com.ddz.mearchant.view.HandyTextView
                android:id="@+id/pay_acount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:gravity="right"
                android:layout_toRightOf="@+id/zhichu_account"
                android:layout_alignParentRight="true"
                android:textColor="@color/tab_text_gray4"
                android:textSize="15sp" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
