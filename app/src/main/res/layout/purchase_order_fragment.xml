<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@color/tab_line_color"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="9dp"
            android:layout_marginTop="9dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right"
                android:orientation="horizontal">
                <com.ddz.mearchant.view.HandyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="left"
                    android:text="录单"
                    android:clickable="false"
                    android:paddingLeft="16dp"
                    android:visibility="invisible"
                    android:textColor="@color/bg_color"
                    android:textSize="15dp" />

                <com.ddz.mearchant.view.HandyTextView
                    android:id="@+id/online_tap"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="right|center_vertical"
                    android:paddingRight="32dp"
                    android:layout_weight="1"
                    android:text="线上"
                    android:textColor="@color/bg_color"
                    android:textSize="18dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                >

                <com.ddz.mearchant.view.HandyTextView
                    android:id="@+id/downline_tap"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="left|center_vertical"
                    android:text="线下"
                    android:layout_weight="1"
                    android:paddingLeft="32dp"
                    android:textColor="@color/bg_color"
                    android:textSize="18dp" />

                <com.ddz.mearchant.view.HandyTextView
                    android:id="@+id/downline_order_in"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="right|center_vertical"
                    android:text="查找"
                    android:paddingRight="16dp"
                    android:textColor="@color/bg_color"
                    android:textSize="15dp" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/tab_line_color"
            android:paddingBottom="1dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:paddingRight="25dp"
                android:orientation="horizontal">
                <View
                    android:id="@+id/up_line_show"
                    android:layout_width="53dp"
                    android:layout_height="3.5dp"
                    android:background="@drawable/tap_line_show"
                    android:gravity="right|center_vertical"
                    >
                </View>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:paddingLeft="25dp"
                android:orientation="horizontal">
                <View
                    android:id="@+id/donw_line_show"
                    android:layout_width="53dp"
                    android:layout_height="3.5dp"
                    android:background="@color/toming"
                    android:gravity="right|center_vertical"
                    >
                </View>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>

    </LinearLayout>