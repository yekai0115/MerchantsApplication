<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">
    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@color/tab_line_color">

    </View>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/tab_line_color"
        android:orientation="horizontal">
    <com.ddz.mearchant.view.HandyTextView
        android:id="@+id/search_start_time"
        android:layout_width="108dp"
        android:layout_height="28dp"
        android:textSize="15sp"
        android:gravity="center"
        android:background="#8bceff"
        android:layout_toLeftOf="@+id/time"
        android:textColor="@color/bg_color"
        android:text="2017-01-01"/>
    <ImageView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13.5dp"
        android:layout_marginRight="13.5dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/search_end_time"
        android:background="@drawable/time"/>
    <com.ddz.mearchant.view.HandyTextView
        android:id="@+id/search_end_time"
        android:layout_width="108dp"
        android:layout_height="28dp"
        android:textSize="15sp"
        android:gravity="center"
        android:background="#8bceff"
        android:textColor="@color/bg_color"
        android:layout_marginRight="26dp"
        android:layout_toLeftOf="@+id/search_action"
        android:text="2017-01-01"/>

    <com.ddz.mearchant.view.HandyTextView
        android:id="@+id/search_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:layout_alignParentRight="true"
        android:textColor="@color/bg_color"
        android:text="查找"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:background="@color/tab_line_color">

    </View>
    <ListView
        android:id="@+id/order_down_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    </ListView>
    <LinearLayout
        android:id="@+id/no_list_show"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="115dp"
            android:src="@drawable/blank"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textSize="15sp"
            android:textColor="@color/amf0_sec_01"
            android:gravity="center"
            android:text="暂无数据,休息一下"/>
    </LinearLayout>
</LinearLayout>